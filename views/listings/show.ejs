<% layout("/layouts/boilerplate") %>

<div class="container">
    <h3 class="page-heading mb-4 text-center">
        Listing <span>Details</span>
    </h3>

    <div class="listing-detail-card shadow-sm rounded overflow-hidden mb-4">
        <img src="<%=listing.image.url%>" alt="<%=listing.title%>" class="img-fluid listing-detail-img">

        <div class="p-4 bg-white">
            <div class="owner-box d-flex align-items-center p-3 mb-4">
              <div class="owner-icon me-3 d-flex align-items-center justify-content-center">
                <i class="fa-solid fa-user"></i>
              </div>
              <div>
                <p class="mb-0 text-muted small">Owned by</p>
                <p class="mb-0 fw-semibold username">@<%= listing.owner.username %></p>
              </div>
            </div>
            
            <h4 class="mb-2 card-title">
                <%=listing.title%>
            </h4>
            <p class="mb-3 card-text text-muted">
                <%=listing.description%>
            </p>

            <ul class="list-unstyled mb-3">
                <li><strong>Price:</strong> &#8377; <%=listing.price.toLocaleString("en-IN")%> / night</li>
                <li><strong>Location:</strong>
                    <%=listing.location%>
                </li>
                <li><strong>Country:</strong> 
                    <%=listing.country%>
                </li>
            </ul>

            <%if(currUser && currUser._id.equals(listing.owner._id)){%>
            <div class="d-flex flex-column flex-md-row gap-3">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-edit flex-fill">Edit</a>

                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="flex-fill">
                    <button type="submit" class="btn btn-delete w-100">Delete</button>
                </form>
            </div>
            <%}%>
        </div>
    </div>
</div>

<hr class="styled-hr">

<!-- Review Section -->
<div class="review-section">
  <%if(currUser){%>
    <h4 class="section-title text-center mb-4">Leave a Review</h4>

    <form action="/listings/<%= listing.id %>/reviews" method="POST"
          class="review-form needs-validation shadow-sm p-4 rounded" novalidate>

      <!-- Rating -->
      <div class="mb-3">
        <label class="form-label">Your Rating</label>
        <div class="rating-stars d-inline-flex flex-row-reverse justify-content-center" id="rating">
          <% for (let i = 5; i >= 1; i--) { %>
            <input type="radio" id="star<%= i %>" name="review[rating]" value="<%= i %>" <%= i === 1 ? 'checked' : '' %> required>
            <label for="star<%= i %>" title="<%= i %> stars">&#9733;</label>
          <% } %>
        </div>
      </div>

      <!-- Comment -->
      <div class="mb-4">
        <label for="comment" class="form-label">Comment</label>
        <textarea id="comment" name="review[comment]" placeholder="Write your review here..."
                  class="form-control custom-textarea" required></textarea>
        <div class="invalid-feedback">Please enter a comment</div>
      </div>

      <div class="text-center">
        <button class="btn custom-form-btn w-100">Submit Review</button>
      </div>
    </form>
    <hr class="styled-hr">
  <%}%>

  <!-- All Reviews -->
<h4 class="section-title text-center mb-4">All Reviews</h4>
<div class="row gy-4">
  <% for (let review of listing.reviews) { %>
    <div class="col-md-6">
      <div class="card review-card">
        <div class="card-body">
          <div class="mb-2">
            <div class="review-user d-flex align-items-center mb-3">
              <div class="review-user-icon d-flex align-items-center justify-content-center me-2">
                <i class="fa-solid fa-user"></i>
              </div>
              <h6 class="fw-semibold mb-0 review-username">@<%= review.author.username %></h6>
            </div>

            <div class="rating-display mt-1">
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= review.rating) { %>
                  <i class="fa-solid fa-star"></i>
                <% } else { %>
                  <i class="fa-regular fa-star"></i>
                <% } %>
              <% } %>
            </div>
          </div>

          <p class="review-comment"><%= review.comment %></p>

          <div class="d-flex justify-content-end mt-3">
            <%if(currUser && currUser._id.equals(review.author._id)){%>
              <form method="POST" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
                <button class="btn btn-outline-danger btn-sm">
                  <i class="fa-solid fa-trash"></i> Delete
                </button>
              </form>
            <% } else { %>
              <div class="delete-placeholder"></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
</div>

